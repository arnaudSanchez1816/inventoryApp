<div>
    <label
        for="<%= input.id %>"
        class="mb-2 block text-sm font-medium text-neutral-950"
    >
        <%= label %>
    </label>
    <input
        type="<%= input.type || "text" %>"
        id="<%= input.id %>"
        <% if (!input.readOnly) { %>
            class="block w-full rounded-lg border border-neutral-950/10 bg-white p-2.5 text-sm text-neutral-950 focus:border-blue-500 focus:ring-blue-500 <%= input.class || "" %>"
        <% } else { %>
            class="bg-gray-100 border border-neutral-950/10 text-neutral-950 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 cursor-not-allowed <%= input.class || "" %>"
        <% } %>
        <% if (input.name) { %>
            name="<%= input.name %>"
        <% } %>
        <% if (input.value) { %>
            value="<%= input.value %>"
        <% } %>
        <% if (input.placeholder) { %>
            placeholder="<%= input.placeholder %>"         
        <% } %>
        <% if (input.required) { %>
            required
        <% } %>
        <% if (input.readOnly) { %>
            readonly
            disabled
            aria-label="disabled input"
        <% } %>
        <% if (input.min) { %>
            min="<%= input.min %>"
        <% } %>
        <% if (input.max) { %>
            max="<%= input.max %>"
        <% } %>
    />
</div>
