<dialog class="delete-constructor-dialog dialog-container">
    <section class="dialog-content">
        <header>
            <h1 class="text-2xl font-bold">Delete constructor <span><%= ct.name %></span></h1>
        </header>
        <%- include('../components/hr.ejs') %>
        <div>
            <form action="/constructors/<%= ct.id %>/delete" method="post">
                <div class="grid gap-4">
                    <%- include('../components/input.ejs', {
                        input: {
                            id:"delete-ct-confirm",
                            type:"text",
                            placeholder: "Delete",
                            class: "delete",
                            required:true
                        }, 
                        label: "Enter \"Delete\" to confirm deletion"})
                    %>
                </div>
                <%- include('../components/hr.ejs') %>
                <div class="mb-4">
                    <%- include('../components/input.ejs', {
                        input: {
                            id:"delete-ct-password",
                            type:"password",
                            name:"password",
                            required:true
                        }, 
                        label: "Password"})
                    %>
                </div>
                <div class="flex justify-end gap-4">
                    <button class="dialog-btn submit btn-primary" type="submit">
                        Delete
                    </button>
                    <button class="dialog-btn cancel close btn-secondary" type="button">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </section>
</dialog>
