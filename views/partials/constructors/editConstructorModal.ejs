<dialog class="edit-constructor-dialog dialog-container">
    <section class="dialog-content">
        <header>
            <h1 class="text-2xl font-bold">
                Edit constructor <span><%= ct.name %></span>
            </h1>
        </header>
        <%- include('../components/hr.ejs') %>
        <form
            action="/constructors/<%= ct.id %>/update"
            method="post"
            enctype="multipart/form-data"
        >
            <div class="grid gap-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-ct-${ct.id}-name`,
                        type:"text",
                        name:"name",
                        value: ct.name,
                        required:true
                    }, 
                    label: "Name"})
                %>
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-ct-${ct.id}-country`,
                        type:"text",
                        name:"country",
                        value: ct.country,
                        required:true
                    }, 
                    label: "Country"})
                %>
                <%- include('./logoInput.ejs', {id : ct.id, logoSrc: ct.logoPath}) %>
            </div>
            <%- include('../components/hr.ejs') %>
            <div class="mb-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-ct-${ct.id}-password`,
                        type:"password",
                        name:"password",
                        required:true
                    }, 
                    label: "Password"})
                %>
            </div>
            <div class="flex gap-4 justify-end">
                <button class="dialog-btn submit btn-primary" type="submit">Edit</button>
                <button class="dialog-btn cancel close btn-secondary" type="button">
                    Cancel
                </button>
            </div>
        </form>
    </section>
</dialog>
