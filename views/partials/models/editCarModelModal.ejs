<dialog class="edit-model-dialog dialog-container">
    <section class="dialog-content">
        <header>
            <h1 class="text-2xl font-bold">
                Edit model <span><%= model.name %></span>
            </h1>
        </header>
        <form action="/cars/<%= model.id %>/update" method="post">
            <div class="grid gap-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:"add-model-name",
                        type:"text",
                        name:"name",
                        required:true,
                        value:model.name
                    }, 
                    label: "Name"})
                %>
                <%- include('../components/input.ejs', {
                    input: {
                        id:"add-model-year",
                        type:"number",
                        name:"year",
                        required:true,
                        min:"0",
                        max:"9999",
                        value: model.year
                    }, 
                    label: "Year"})
                %>
            </div>
            <%- include('../components/hr.ejs') %>
            <div class="mb-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-model-password`,
                        type:"password",
                        name:"password",
                        required:true
                    }, 
                    label: "Password"})
                %>
            </div>
            <div class="flex gap-4 justify-end">
                <button class="dialog-btn submit btn-primary" type="submit">Edit</button>
                <button class="dialog-btn cancel close btn-secondary" type="button">
                    Cancel
                </button>
            </div>
        </form>
    </section>
</dialog>
