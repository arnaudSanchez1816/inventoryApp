<dialog class="edit-model-dialog">
    <section>
        <header>
            <h1>Edit model</h1>
        </header>
        <form action="/cars/<%= model.id %>/update" method="post">
            <label>
                Name
                <input type="text" name="name" value="<%= model.name %>" />
            </label>
            <label>
                Year
                <input
                    type="number"
                    name="year"
                    min="0"
                    maxlength="4"
                    value="<%= model.year %>"
                />
            </label>
            <label
                >Password
                <input type="password" name="password" />
            </label>
            <button class="dialog-btn submit" type="submit">Edit</button>
            <button class="dialog-btn cancel close" type="button">
                Cancel
            </button>
        </form>
    </section>
</dialog>
