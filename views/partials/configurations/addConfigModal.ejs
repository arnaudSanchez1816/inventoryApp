<dialog id="add-configuration-dialog" class="dialog-container">
    <section class="dialog-content">
        <header>
            <h1 class="text-2xl font-bold">Add configuration</h1>
        </header>
        <%- include('../components/hr.ejs') %>
        <form action="/cars/<%= model.id %>/config/new" method="post">
            <div class="grid gap-4">
                <div>
                    <label for="add-config-trim" class="ms-2 text-sm font-medium text-neutral-950">
                        Trim
                    </label>
                    <select 
                        id="add-config-trim"
                        name="trimId" 
                        class="block w-full rounded-lg border border-neutral-950/10 bg-white p-2.5 text-sm text-neutral-950 focus:border-blue-500 focus:ring-blue-500"
                    >
                        <% trims.forEach((trim) => { %>
                            <option value="<%= trim.id %>"><%= trim.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label for="add-config-pt" class="ms-2 text-sm font-medium text-neutral-950">
                        Powertrain
                    </label>
                    <select 
                        id="add-config-pt"
                        name="powertrainId" 
                        class="block w-full rounded-lg border border-neutral-950/10 bg-white p-2.5 text-sm text-neutral-950 focus:border-blue-500 focus:ring-blue-500"
                    >
                        <% powertrains.forEach((pt) => { %>
                            <option value="<%= pt.id %>"><%= pt.name %></option>
                        <% }) %>
                    </select>
                </div>
                <%- include('../components/input.ejs', {
                    input: {
                        id:"add-config-price",
                        type:"number",
                        name:"price",
                        required:true,
                        min:"0",
                        value:"0"
                    }, 
                    label: "Price"})
                %>
                <%- include('../components/input.ejs', {
                    input: {
                        id:"add-config-stock",
                        type:"number",
                        name:"stock",
                        required:true,
                        min:"0",
                        value:"0"
                    }, 
                    label: "Stock"})
                %>
            </div>
            <%- include('../components/hr.ejs') %>
            <div class="mb-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:"add-config-password",
                        type:"password",
                        name:"password",
                        required:true
                    }, 
                    label: "Password"})
                %>
            </div>
            <div class="flex gap-4 justify-end">
                <button class="dialog-btn submit btn-primary" type="submit">
                    Add
                </button>
                <button class="dialog-btn cancel close btn-secondary" type="button">
                    Cancel
                </button>
            </div>
        </form>
    </section>
</dialog>
