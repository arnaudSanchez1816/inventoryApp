<dialog class="edit-trim-dialog dialog-container" data-trim-id="<%= trim.id %>">
    <section class="dialog-content">
        <header>
            <h1 class="text-2xl font-bold">Edit trim <%= trim.name %></h1>
        </header>
        <%- include('../components/hr.ejs') %>
        <form action="/trims/edit/<%= trim.id %>" method="post">
            <input type="hidden" name="modelId" value="<%= model.id %>" />
            <div class="grid gap-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-trim-${trim.id}-name`,
                        type:"text",
                        name:"name",
                        value: trim.name,
                        required:true
                    }, 
                    label: "Name"})
                %>
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-trim-${trim.id}-display-name`,
                        type:"text",
                        name:"displayName",
                        value: trim.displayName,
                        required:true
                    }, 
                    label: "Display name"})
                %>
            </div>
            <%- include('../components/hr.ejs') %>
            <div class="mb-4">
                <%- include('../components/input.ejs', {
                    input: {
                        id:`edit-trim-${trim.id}-password`,
                        type:"password",
                        name:"password",
                        required:true
                    }, 
                    label: "Password"})
                %>
            </div>
            <div class="flex gap-4 justify-end">
                <button class="dialog-btn submit btn-primary" type="submit">Edit</button>
                <button class="dialog-btn cancel close btn-secondary" type="button">
                    Cancel
                </button>
            </div>
        </form>
    </section>
</dialog>
